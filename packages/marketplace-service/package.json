    "@types/node": "^20.5.4",
    "@vitest/coverage-v8": "2.0.5",
    "eslint": "^8.47.0",
    "eslint-config-dsfx3d": "^0.1.2",
    "husky": "^8.0.3",
    "prettier": "^3.0.2",
    "tsx": "^4.19.1",
    "typescript": "^5.1.6",
    "unbuild": "^2.0.0",
    "vitest": "2.0.5"
  },
  "dependencies": {
    "@adminjs/express": "^6.1.0",
