    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-formidable": "^1.2.0",
    "express-session": "^1.18.1",
    "mongodb": "^6.9.0",
    "mongoose": "^8.7.0",
    "superjson": "^2.2.1",
    "trpc-playground": "^1.0.4",
    "tslib": "^2.6.3",
    "zod": "^3.23.8"
  }
